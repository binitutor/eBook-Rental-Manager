    *@

    </div>

    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li class="nav-menu">@Html.ActionLink("Home", "Index", "Home")</li>
            @*<li>@Html.ActionLink("Bookshelf", "BookShelf", "Books")</li>*@
            <li>@Html.ActionLink("Bookshelf", "Index", "Books")</li>
            <li>@Html.ActionLink("Terms", "Terms", "Home")</li>

            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Assign Account Roles", "Index", "Role")</li>
                    <li>@Html.ActionLink("Assign Genre", "Index", "Genres")</li>
                }
            }
        </ul>

        @Html.Partial("_LoginPartial")
    </div>

    </div>
    </div>


    <div class="container body-content">
        @RenderBody()




        <hr />
        <footer>
            <div id="footer1" class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 text-center">
                        <p>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("Admin"))
                                {
                                    <asp:LinkButton class="footerlinks" id="" runat="server">Author Management</asp:LinkButton>
                                    <asp:LinkButton class="footerlinks" id="" runat="server">Publisher Management</asp:LinkButton>

                                    <asp:LinkButton class="footerlinks" id="" runat="server">Book Issuing</asp:LinkButton>

                                    <asp:LinkButton class="footerlinks" id="" runat="server">Member Management</asp:LinkButton>
                                }
                                <asp:LinkButton class="footerlinks" id="" runat="server">Book Inventory</asp:LinkButton>
                            }
                            else
                            {
                                <asp:LinkButton class="footerlinks" id="" runat="server" visible="true">Admin Login</asp:LinkButton>
                            }
                        </p>
                    </div>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

